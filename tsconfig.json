{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
        "types": ["@types/react-native-dotenv"],
        "typeRoots": ["./app/types"],
        "noImplicitAny": true,
        "strict": true,
        "baseUrl": ".",
        "paths": {
            "@components": ["./app/components/*"],
            "@routes": ["./app/routes/*"],
            "@screens": ["./app/screens/*"],
            "@actions": ["./app/actions/*"],
            "@reducers": ["./app/reducers/*"],
            "@hooks": ["./app/hooks/*"],
            "@services": ["./app/services/*"],
            "@adapters": ["./app/adapters/*"],
            "@assets": ["./app/assets/*"],
            "@config": ["./app/config/*"],
            "@data": ["./app/data/*"]
        }
    }
}
