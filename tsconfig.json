{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "strict": true,

        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        },
        "noImplicitAny": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "resolveJsonModule": true
    }
}
