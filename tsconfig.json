{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "strict": true,

        "baseUrl": ".",
        "paths": {
            "@root/*": ["./*"]
        },
        "noImplicitAny": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "jsx": "react"
    }
}
