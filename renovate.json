{
  "extends": [
    "config:base",
    ":preserveSemverRanges"
  ],
  "buildkite": {
    "enabled": false
  },
  "docker-compose": {
    "enabled": false
  },
  "packageRules": [
    {
      "groupName": "Minors",
      "matchManagers": ["dockerfile", "npm"],
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"]
    },
    {
      "groupName": "Majors",
      "matchManagers": ["dockerfile", "npm"],
      "matchUpdateTypes": ["major"]
    },
    {
      "groupName": "Ignore",
      "matchPackageNames": ["react-native-reanimated"],
      "enabled": false
    },
  ]
}
